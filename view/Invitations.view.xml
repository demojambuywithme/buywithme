<mvc:View controllerName="bwm.view.Invitations"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          xmlns="sap.m">
    <Page title="{i18n&gt;invitationsTitle}"
          showNavButton="true"
          navButtonPress="onNavButtonPressed">
          <content>
            <GrowingList threshold="10"
                        triggerText="more"
                        scrollToLoad="true"
                        items="{
                            path: '/InvitationSet'
                        }">
                <items>
                    <CustomListItem >
                        <content>
                            <HBox>
                                <items>
                                    <core:Fragment fragmentName="bwm.fragment.Buyer" type="XML"/>
                                    <core:Fragment fragmentName="bwm.fragment.Status" type="XML"/>
                                </items>
                            </HBox>
                            
                        </content>
                    </CustomListItem >

<!--                     <StandardListItem title="{id}" 
                                      description="{discount}"/> -->
                </items>

            </GrowingList>
          </content>
    </Page>
</mvc:View>

