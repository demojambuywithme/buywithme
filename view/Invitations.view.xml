<mvc:View controllerName="bwm.view.Invitations"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          xmlns="sap.m">
    <Page title="{i18n&gt;invitationsTitle}"
          showNavButton="true"
          showFooter="true"
          navButtonPress="onNavButtonPressed">
        <content>
            <GrowingList threshold="10"
                         triggerText="more"
                         scrollToLoad="true"
                         showSeparators="sap.m.ListSeparators.None"
                         items="{ path: '/Invitation' }">
                <items>
                    <CustomListItem class="sapUiTinyMarginBottom">
                        <content>
                            <VBox>
                                <items>
                                    <core:Fragment fragmentName="bwm.fragment.InvitationOverview"
                                                   type="XML" />
                                    <Toolbar>
                                        <Button text="Join"
                                                type="Accept"
                                                width="25%" />
                                        <!-- <ToolbarSpacer /> -->
                                        <Button icon="sap-icon://favorite"
                                                width="25%" />
                                        <!-- <ToolbarSpacer /> -->
                                        <Button icon="sap-icon://globe"
                                                width="25%" />
                                        <!-- <ToolbarSpacer /> -->
                                        <Button icon="sap-icon://share-2"
                                                width="25%" />
                                    </Toolbar>
                                </items>
                            </VBox>
                        </content>
                    </CustomListItem>
                </items>
            </GrowingList>
        </content>
        <footer>
            <Toolbar>
                <content>
                    <Button type="Emphasized" width="33%" iconFirst="true" icon="sap-icon://list" />
                    <Button width="33%" iconFirst="true" icon="sap-icon://map" press="toInvitationsMap"/>
                    <Button width="34%" iconFirst="true" icon="sap-icon://person-placeholder" press="toMine"/>
                </content>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
