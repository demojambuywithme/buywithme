<mvc:View controllerName="bwm.view.Invitations"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          xmlns="sap.m">
    <Page title="{i18n&gt;invitationsTitle}"
          showNavButton="true"
          navButtonPress="onNavButtonPressed">
        <content>
            <GrowingList threshold="10"
                         triggerText="more"
                         scrollToLoad="true"
                         items="{ path: '/Invitation' }">
                <items>
                    <CustomListItem>
                        <content>
                            <VBox>
                                <items>
                                    <core:Fragment fragmentName="bwm.fragment.InvitationOverview"
                                                   type="XML" />
                                    <HBox>
                                        <items>
                                            <Button text="Join"/>
                                            <Button text="Favorite"/>
                                        </items>
                                    </HBox>
                                </items>
                            </VBox>
                        </content>
                    </CustomListItem>
                </items>
            </GrowingList>
        </content>
    </Page>
</mvc:View>

