<core:View xmlns:core="sap.ui.core"
           xmlns:mvc="sap.ui.core.mvc"
           xmlns="sap.m"
           controllerName="bwm.view.Chat"
           xmlns:html="http://www.w3.org/1999/xhtml">
    <Page title="Chat"
          showNavButton="true"
          navButtonPress="onNavButtonPressed">
        <content>
            <List inset="true"
                  backgroundDesign="Transparent"
                  showSeparators="None"
                  items="{msgs&gt;/}">
                <items>
                    <CustomListItem class="sapUiSmallMarginBottom">
                        <VBox>
                            <items>
                                <Label text="{msgs&gt;user}" />
                                <TextArea editable="false"
                                          value="{msgs&gt;text}"
                                          class="chatMessage--others"
                                          rows="2"
                                          wrapping="None" />
                            </items>
                        </VBox>
                    </CustomListItem>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <content>
                    <Input id="msg"
                           width="100%"
                           value="{msg>/text}"
                           placeholder="Say Something" />
                    <Button text="Send"
                            press="onSend" />
                </content>
            </Toolbar>
        </footer>
    </Page>
</core:View>
