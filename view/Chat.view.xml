<core:View xmlns:core="sap.ui.core"
           xmlns:mvc="sap.ui.core.mvc"
           xmlns="sap.m"
           controllerName="bwm.view.Chat"
           xmlns:html="http://www.w3.org/1999/xhtml">
    <Page id="chatting"
          title="Chat"
          showNavButton="true"
          navButtonPress="onNavButtonPressed"
          class="chatpage">
        <content>
            <core:HTML id='msglist'></core:HTML>
        </content>
        <footer>
            <Toolbar>
                <content>
                    <Input id="msg"
                           width="100%"
                           value="{msg&gt;/text}"
                           placeholder="Say Something" />
                    <Button text="Send"
                            press="onSend" />
                </content>
            </Toolbar>
        </footer>
    </Page>
</core:View>

