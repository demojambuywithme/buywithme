<core:View xmlns:core="sap.ui.core"
           xmlns:mvc="sap.ui.core.mvc"
           xmlns="sap.m"
           controllerName="bwm.view.Chat"
           xmlns:html="http://www.w3.org/1999/xhtml">
    <Page id="chatting"
          title="Chat"
          showNavButton="true"
          navButtonPress="onNavButtonPressed">
        <content>
            <!-- <core:HTML id='msglist'> -->
            <!-- </core:HTML> -->
            <List id='msglist'
                  inset="true"
                  backgroundDesign="Transparent"
                  showSeparators="None"
                  items="{msgs&gt;/}"
                  updateFinished="onUpdateFinished">
                <items>
                    <CustomListItem class="sapUiSmallMarginBottom">
                        <VBox>
                            <items>
                                <TextArea editable="false"
                                          value="{msgs&gt;msg}"
                                          class="chatMessage--others"
                                          rows="{= Math.ceil(${msgs&gt;msg}.length / 19) }"
                                          wrapping="Soft" />
                                <Label text="{msgs&gt;usrname}" />
                            </items>
                        </VBox>
                    </CustomListItem>
                </items>
            </List>
        </content>
        <footer>
            <Toolbar>
                <content>
                    <Input id="msg"
                           width="100%"
                           value="{msg&gt;/text}"
                           placeholder="Say Something" />
                    <Button text="Send"
                            press="onSend" />
                </content>
            </Toolbar>
        </footer>
    </Page>
</core:View>
