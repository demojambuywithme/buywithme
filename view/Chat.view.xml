<core:View xmlns:core="sap.ui.core"
           xmlns:mvc="sap.ui.core.mvc"
           xmlns="sap.m"
           controllerName="bwm.view.Chat"
           xmlns:html="http://www.w3.org/1999/xhtml">
    <Page title="Chat"
          showNavButton="true"
          navButtonPress="onNavButtonPressed">
        <content>
            <List inset="true"></List>
        </content>
        <footer>
            <Toolbar>
                <content>
                    <Input width="100%"
                           placeholder="Say Something" />
                    <Button text="Send" />
                </content>
            </Toolbar>
        </footer>
    </Page>
</core:View>
