<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" xmlns="sap.m" controllerName="bwm.view.InvitationDetail"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Invitation Detail" showNavButton="true"
		navButtonPress="onNavButtonPressed">
		<headerContent>
			<Button icon="sap-icon://discussion" press="onNavToChat" />
		</headerContent>
		<!-- <l:HorizontalLayout class="sapUiSmallMargin"> <VBox> <items> <core:Fragment 
			fragmentName="bwm.fragment.InvitationOverview" type="XML" /> </items> </VBox> 
			</l:HorizontalLayout> -->
		<VBox>
			<items>
				<core:Fragment fragmentName="bwm.fragment.InvitationOverview"
					type="XML" />
			</items>
		</VBox>

		<Bar>
			<contentLeft>
				<core:Icon src="sap-icon://grid" class="size1" color="#031E48">
					<core:layoutData>
						<FlexItemData growFactor="1" />
					</core:layoutData>
				</core:Icon>
			</contentLeft>
			<contentMiddle>
				<Label text="Clothing -> T-shirt"></Label>
			</contentMiddle>
		</Bar>
		<Bar>
			<contentLeft>
				<core:Icon src="sap-icon://simple-payment" class="size1"
					color="#031E48">
					<core:layoutData>
						<FlexItemData growFactor="1" />
					</core:layoutData>
				</core:Icon>
			</contentLeft>
			<contentMiddle>
				<Label text="Buy 5 PC 40% Discount"></Label>
			</contentMiddle>
		</Bar>
		<GrowingList threshold="10" triggerText="more"
			scrollToLoad="true">
			<items>
				<CustomListItem>
					<content>
						<HBox>
							<items>
								<Image src="image\pic.jpg" width="50px" height="50px" />
								<VBox>
									<items>
										<RatingIndicator value="4" />
										<Label text="F, Lastname" />
									</items>
								</VBox>
								<VBox>
									<items>
										<HBox>
											<items>
												<core:Icon src="sap-icon://time-entry-request" />
												<Label text="45 Minutes Left" />
											</items>
										</HBox>
										<ProgressIndicator class="sapUiSmallMarginBottom"
											percentValue="80" displayValue="4/5" showValue="true" state="None"
											height="20px" />
									</items>
								</VBox>
							</items>
						</HBox>
					</content>
				</CustomListItem>
			</items>
		</GrowingList>
		<footer>
			<Toolbar class="sapUiMediumMarginTop">
				<Button text="Accept" type="Accept" />
				<ToolbarSpacer />
				<Button icon="sap-icon://favorite" />
				<ToolbarSpacer />
				<Button icon="sap-icon://globe" />
				<ToolbarSpacer />
				<Button icon="sap-icon://share-2" />
			</Toolbar>
		</footer>
	</Page>
</core:View>