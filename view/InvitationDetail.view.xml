			color="#031E48" > <core:layoutData> <FlexItemData growFactor="1" /> </core:layoutData> 
			</core:Icon> <Label text="Huaihai Road, GAP" textAlign="left"></Label> </contentLeft> 
			</Bar> -->
	    <Panel width="auto">
	    <VBox>
		<HBox binding="{path: 'Categroy'}" class="sapUiSmallMarginTop">
				<core:Icon src="sap-icon://grid" size="150%" width="30px" color="#64E4CE" class="sapUiSmallMarginEnd">
					<!-- <core:layoutData> <FlexItemData growFactor="1" /> </core:layoutData> -->
				</core:Icon>
				<Label text="{description}" width="250px" textAlign="Center"></Label>
		</HBox>
		<HBox class="sapUiSmallMarginTop">
				<core:Icon src="sap-icon://simple-payment" size="150%" width="30px" color="#64E4CE" class="sapUiSmallMarginEnd">
					<!--<core:layoutData>
						<FlexItemData growFactor="1" /> 
					</core:layoutData>-->
				</core:Icon>
				<!-- <Label id="discountType" text="{ parts: [ {path:'total_quantity'}, 
					{path:'discount'}, {path:'DiscountType/dis_category'} ], formatter:'discountFormatter' 
					}"></Label> -->
				<Label 
				    text="{ parts: [ 'total_quantity', 'DiscountType/dis_category', 'discount', 'total_money','return_money'], formatter: 'bwm.util.Formatter.discountInforFormatter' }"
					width="250px" textAlign="Center"/>
		</HBox>
        </VBox>
        <VBox>
		<Toolbar>
			<Text text="I Want"></Text>
			<Input id="itemQuantity" value="10" width="75px" textAlign="Center"
				fieldWidth="60%" />
			<Text text="PC"></Text>
			<Input id="itemCost" value="100.00" width="75px" textAlign="Center"
				fieldWidth="60%" liveChange="onChangeValue" />
			<Text text="RMB"></Text>
		</Toolbar>
		<Toolbar>
	    <Text text="Discount Price:"/>
		<Text id="actualCost" width="80px" textAlign="Center"
				fieldWidth="60%" design="Bold"/>
		<Text text="RMB"></Text>
		</Toolbar>
		</VBox>
        </Panel>
		<GrowingList threshold="10" triggerText="more"
			scrollToLoad="true" items="{ path: 'InvitationItems' }">
			<items>
				<CustomListItem class="sapUiTinyMarginBottom">
					<content>
						<HBox>
							<items>
								<HBox width="185px">
									<items>
										<core:Fragment fragmentName="bwm.fragment.Joiner"
											type="XML" />
									</items>
								</HBox>
								<HBox>
								<Button icon ="sap-icon://outgoing-call" color="#64E4CE" class="sapUiTinyMarginTop"
								        press = "onCallOut">
								</Button>
								</HBox>
								<VBox>
									<items>
										<Label text=" {quantity} PCs {money} RMB" 
											class="sapUiTinyMarginTop"
											textAlign="Left" />
										<Label text=" Disc. Pri. {money} RMB" 
											class="sapUiTinyMarginTop"
											textAlign="Left" />
									</items>
								</VBox>
							</items>
						</HBox>
					</content>
				</CustomListItem>
			</items>
		</GrowingList>
		<!--<VBox>
		<Toolbar>
			<Text text="I Want"></Text>
			<Input id="itemQuantity" value="10" width="80px" textAlign="Center"
				fieldWidth="60%" />
