<core:View xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" controllerName="bwm.view.Logon" 
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Page title="Title">
        <content>
            <Label text="User"/> <Input id="user" value="{logon>/user}"/>
            <Label text="Password"/> <Input type="Password" value="{logon>/password}"/>
            <Button text="Logon" press=".onLogon"/>
        </content>
    </Page>
</core:View>
