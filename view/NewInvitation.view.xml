<mvc:View controllerName="bwm.view.Invitations" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:v="sap.ui.comp.variants">
    <Page title="New Come&amp;Buy" showNavButton="true" navButtonPress="onNavButtonPressed" enableScrolling="true">
        <headerContent>
            <Button icon="sap-icon://globe" text="OnlyTest" press="onNavToMap" />
        </headerContent>
        <Panel width="auto" class="sapUiSmallMargin">
            <content>
                <Input id="titleInput" type="Text" placeholder="What do you want to say ..." textAlign="sap.ui.core.TextAlign.Right">
                </Input>
            </content>
        </Panel>
        <!-- -->
        <Panel width="auto" class="sapUiSmallMargin">
            <l:HorizontalLayout class="sapUiSmallMargin">
                <core:Icon src="sap-icon://shelf" color="#64E4CE">
                </core:Icon>
                <Select Width="160px">
                    <core:Item key="CG" text="Clothing" />
                    <core:Item key="FD" text="Food" />
                    <core:Item key="HL" text="Hotel" />
                    <core:Item key="TI" text="Taxi" />
                </Select>
            </l:HorizontalLayout>
            <l:HorizontalLayout class="sapUiSmallMargin">
                <core:Icon src="sap-icon://money-bills" color="#64E4CE">
                </core:Icon>
                <Select Width="160px">
                    <core:Item key="CG" text="Buy X PC Y Discount" />
                    <core:Item key="FD" text="Buy X Return Y" />
                </Select>
            </l:HorizontalLayout>
        </Panel>
        <!-- -->
        <Panel width="auto" class="sapUiSmallMargin">
            <l:HorizontalLayout>
                <text text="I Want" />
                <Input value="10" description="PC" width="70px" fieldWidth="60%" class="sapUiSmallMarginBottom" />
                <Input value="100.00" description="RMB" width="160px" fieldWidth="60%" class="sapUiSmallMarginBottom" />
            </l:HorizontalLayout>
            <l:HorizontalLayout>
                <text text="My Cost is:" />
                <ObjectNumber class="sapUiSmallMarginBottom" number="100" unit="RMB" />
            </l:HorizontalLayout>
        </Panel>
        <!-- -->
        <l:Grid defaultSpan="L3 M4 S6" class="sapUiSmallMarginTop">
            <l:content>
                <StandardListItem title="My Cost is:" />
                <StandardListItem title="000 $" />
            </l:content>
        </l:Grid>
    </Page>
</mvc:View>
