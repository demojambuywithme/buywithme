<mvc:View controllerName="bwm.view.Invitations" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Page title="New Come&amp;Buy" showNavButton="true" navButtonPress="onNavButtonPressed" enableScrolling="true">
        <headerContent>
            <Button icon="sap-icon://globe" text="OnlyTest" press="onNavToMap" />
        </headerContent>
        <Panel width="auto" class="sapUiSmallMargin">
            <content>
                <Input id="titleInput" type="Text" placeholder="What do you want to say ..." textAlign="sap.ui.core.TextAlign.Right">
                </Input>
            </content>
        </Panel>
        <l:HorizontalLayout class="sapUiSmallMargin">
            <Panel width="auto" class="sapUiSmallMargin">
                <core:Icon src="sap-icon://shelf" class="size2" color="#64E4CE">
                </core:Icon>
            </Panel>
        </l:HorizontalLayout>
        <l:Grid defaultSpan="L3 M4 S6" class="sapUiSmallMarginTop">
            <l:content>
                <StandardListItem title="My Cost is:" />
                <StandardListItem title="000 $" />
            </l:content>
        </l:Grid>
    </Page>
</mvc:View>
