<mvc:View controllerName="bwm.view.Invitations" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:v="sap.ui.comp.variants" xmlns:form="sap.ui.layout.form">
    <Page title="New Come&amp;Buy" class="sapUiContentPadding" showNavButton="true" navButtonPress="onNavButtonPressed" enableScrolling="true">
        <headerContent>
        </headerContent>
        <Vbox>
            <Input id="titleInput1" type="Text" placeholder="What do you want to say ..." textAlign="sap.ui.core.TextAlign.Right" class="sapUiExploredNoMarginInfo">
            </Input>
            <Panel width="auto">
                <!-- -->
                <Vbox class="sapUiSmallMarginBottom">
                    <Hbox alignItems="Stretch">
                        <core:Icon src="sap-icon://grid" size="150%" width="30px" color="#64E4CE" class="sapUiSmallMarginEnd">
                            <core:layoutData>
                                <FlexItemData alignSelf="Center" growFactor="" />
                            </core:layoutData>
                        </core:Icon>
                        <Select maxWidth="300%" width="230px" autoAdjustWidth="false">
                            <core:Item key="CG" text="Clothing" />
                            <core:Item key="FD" text="Food" />
                            <core:Item key="HL" text="Hotel" />
                            <core:Item key="TI" text="Taxi" />
                        </Select>
                    </Hbox>
                    <Hbox>
                        <core:Icon src="sap-icon://loan" size="150%" width="30px" color="#64E4CE" class="sapUiSmallMarginEnd">
                            <core:layoutData>
                                <FlexItemData alignSelf="Center" growFactor="" />
                            </core:layoutData>
                        </core:Icon>
                        <Select width="230px">
                            <core:Item key="CG" text="Buy X PC Y Discount" />
                            <core:Item key="FD" text="Buy X Return Y" />
                        </Select>
                    </Hbox>
                </Vbox>
                <!-- -->
                <Vbox>
                    <Toolbar>
                        <Text text="I Want"></Text>
                        <Input value="10" width="70px" textAlign="Center" fieldWidth="60%" />
                        <Text text="PC"></Text>
                        <Input value="100.00" width="70px" textAlign="Center" fieldWidth="60%" />
                        <Text text="RMB"></Text>
                    </Toolbar>
                    <Toolbar>
                        <text text="My Cost is:" />
                        <ObjectNumber number="100.5" unit="RMB" />
                        <ObjectNumber number="50.5" unit="RMB" class="sapUiTinyMarginBegin" />
                    </Toolbar>
                    <Toolbar>
                        <text text="Auto Close in"> </text>
                        <Input value="2" width="40px" textAlign="Center" fieldWidth="60%" />
                        <text text="Hours"> </text>
                    </Toolbar>
                </Vbox>
            </Panel>
            <!-- -->
            <Hbox alignItems="Stretch" class="sapUiExploredNoMarginInfo">
                <core:Icon src="sap-icon://map" size="150%" color="#64E4CE">
                </core:Icon>
                <Link text="Where are you" class="sapUiTinyMarginTop" press="handleLinkPress" />
            </Hbox>
            <!-- -->
            <Hbox alignItems="Stretch" class="sapUiExploredNoMarginInfo" >
                <Image class="sapUiSmallMarginEnd" src="./pictures_cy/123.png" densityAware="true" width="100%">
                    <layoutData>
                        <l:GridData span="L3 M3 S8" linebreakL="true" linebreakM="true" linebreakS="true" />
                    </layoutData>
                </Image>
                <Image class="sapUiSmallMarginEnd" src="./pictures_cy/discount.png" densityAware="true" width="100%">
                    <layoutData>
                        <l:GridData span="L3 M3 S8" linebreakL="true" linebreakM="true" linebreakS="true" />
                    </layoutData>
                </Image>
                <core:Icon src="sap-icon://sys-add" size="100px" color="#64E4CE" press="handleAddpicPress">
                    <core:layoutData>
                        <FlexItemData alignSelf="Center" />
                    </core:layoutData>
                </core:Icon>
            </Hbox>
            <!-- -->
        </Vbox>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="PUBLISH" width="180px" type="Accept" press="handlePublishPress" />
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
