<core:FragmentDefinition
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <HBox binding="{path: 'Creator'}" >
        <items>
            <Image binding = "{path: 'MyAvatar'}"
            		src="http://10.58.132.213:8000{pic_path}{pic_name}"
                    width="50px"
                    height="50px"/>
            <VBox>
                <items>
                    <RatingIndicator value="{rate}" 
                    				maxValue="5"
                    			 	enabled = "false"	/>
                    <Label text="{name}"/>
                </items>
            </VBox>
        </items>
    </HBox>
</core:FragmentDefinition>   
