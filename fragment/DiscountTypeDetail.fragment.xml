<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog title="Discount Details" type="Message">
        <content>
            <VBox>
                <HBox>
                    <Toolbar>
                        <Text text="X : "></Text>
                        <Input id="inputX" value="{newInvitation>/Invitation/total_quantity}" width="70px" textAlign="Center" fieldWidth="60%" />
                    </Toolbar>
                </HBox>
                <HBox>
                    <Toolbar>
                        <Text text="Y :"></Text>
                        <Input id="inputY" value="{newInvitation>/Invitation/discount}" width="70px" textAlign="Center" fieldWidth="60%" />
                    </Toolbar>
                </HBox>
            </VBox>
        </content>
        <beginButton>
            <Button text="Confirm" press="onDiscDialogConfirm" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onDiscDialogClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
