<core:FragmentDefinition xmlns:l="sap.ui.layout"
                         xmlns:f="sap.ui.layout.form"
                         xmlns:core="sap.ui.core"
                         xmlns="sap.m">
    <VBox>
        <items>
            <HBox>
                <items>
                    <core:Icon src="sap-icon://time-entry-request"
                               class="sapUiSmallMarginEnd" />
                    <Label text="{ parts: [
                                           {path: 'create_time'},
                                           {path: 'valid_in'},
                                           {path: 'end_time'}
                                           ],
                                   formatter:'bwm.util.Formatter.validInFormatter'
                                   } Minutes Left" />
                </items>
            </HBox>
            <ProgressIndicator class="sapUiSmallMarginBottom"
                               percentValue="80"
                               displayValue="4/5"
                               showValue="true"
                               state="None" />
        </items>
    </VBox>
</core:FragmentDefinition>
